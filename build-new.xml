<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project SpringSaLaD with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR file Export Wizard-->
    <!--ANT 1.7 is required-->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <property environment="env"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/SpringSalad_${env.BUILD_VERSION}.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.springsalad.langevinsetup.MainGUI"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.buildfile}/target/classes"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/gluegen-rt-natives-linux-amd64.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/gluegen-rt-natives-macosx-universal.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/gluegen-rt-natives-windows-amd64.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/gluegen-rt.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/gluegen.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/jogl-all-mobile-natives-macosx-universal.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/jogl-all-natives-linux-amd64.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/jogl-all-natives-windows-amd64.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/jogl-all.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/monte-repack-1.0.jar"/>
            <fileset dir="${env.LANGEVIN_PATH}/target/classes"/>
            <zipfileset excludes="META-INF/*.SF" src="${env.HOME}/.m2/repository/com/massisframework/j3d/vecmath/1.6.0.1/vecmath-1.6.0.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${env.HOME}/.m2/repository/com/massisframework/j3d/java3d-core/1.6.0.1/java3d-core-1.6.0.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${env.HOME}/.m2/repository/org/apache/commons/commons-rng-core/1.0/commons-rng-core-1.0.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${env.HOME}/.m2/repository/org/apache/commons/commons-rng-client-api/1.0/commons-rng-client-api-1.0.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${env.HOME}/.m2/repository/net/sourceforge/jmol/jmol/14.15.2/jmol-14.15.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${env.HOME}/.m2/repository/org/apache/commons/commons-math3/3.6.1/commons-math3-3.6.1.jar"/>
        </jar>
    </target>
</project>
